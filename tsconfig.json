{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "composite": true,
        "importHelpers": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "package.json",
        "src/",
        "index.ts",
        "src/yazowonico.ts"
    ],
    "exclude": [
        "node_modules/**"
    ]
}